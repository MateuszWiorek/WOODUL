<aura:component description="WDLC_ErrorToast">
    <aura:method name="showError" action="{!c.openToast}" access="global">
        <aura:attribute name="errorMessage" type="Object" access="global"/>
    </aura:method>
    <aura:method name="showInfo" action="{!c.openInfoToast}" access="global">
        <aura:attribute name="message" type="Object" access="global"/>
        <aura:attribute name="title" type="Object" access="global"/>
    </aura:method>
</aura:component>