<aura:component description="WDL_ModalComponent" controller="WDLC_DiscountManagerController"
                implements="flexiPage:availableForAllPageTypes" extensible="true">

    <aura:attribute type="Object" name="accountInfo" access="global"/>
    <aura:attribute type="Boolean" name="canBeShown" access="global"/>
    <aura:attribute name="discountName" type="String" access="global"/>
    <aura:attribute name="discountStartDate" type="Date" access="global"/>
    <aura:attribute name="discountEndDate" type="Date" access="global"/>
    <aura:attribute name="type" type="String" access="global"/>

    <aura:registerEvent name="WDLC_RefreshDiscounts" type="c:WDLC_RefreshDiscounts"/>
    <aura:registerEvent name="WDL_RefreshAfterDeleteRecord" type="c:WDL_RefreshAfterDeleteRecord"/>

    <aura:if isTrue="{!v.canBeShown}">
        <section id="newClientSectionId" role="dialog" tabindex="-1"
                 class="slds-modal slds-modal_small slds-fade-in-open"
                 aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1">
            <div class="slds-modal__container">
                <header class="slds-modal__header">
                    <button class="slds-button slds-button_icon slds-modal__close slds-button_icon-inverse"
                            title="Close">
                        <span class="slds-assistive-text">Close</span>
                    </button>
                </header>
                <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                    <p style="text-align: center">{!$Label.c.WDL_DeleteConfirmation}</p>
                </div>
                <footer class="slds-modal__footer">
                    <lightning:button label="{!$Label.c.No}"
                                      class="slds-button slds-button_brand"
                                      onclick="{!c.hideModal}"/>
                    <lightning:button label="{!$Label.c.Yes}"
                                      class="slds-button slds-button_destructive"
                                      onclick="{!c.handleDeleteRecord}"/>
                </footer>
            </div>
        </section>
    </aura:if>
    <div id="backdropAdding" class="slds-backdrop"></div>
    <aura:if isTrue="{!and(v.canBeShown, v.type == 'newDiscount')}">
        <section id="newClientSectionId" role="dialog" tabindex="-1"
                 class="slds-modal slds-modal_small slds-fade-in-open"
                 aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1">
            <div class="slds-modal__container">
                <header class="slds-modal__header">
                    <button class="slds-button slds-button_icon slds-modal__close slds-button_icon-inverse"
                            title="Close">
                        <span class="slds-assistive-text">Close</span>
                    </button>
                </header>
                <lightning:card>
                    <div class="slds-grid">
                        <div class="slds-col slds-size--1-of-12"/>
                        <div class="slds-col slds-size--10-of-12">
                            <ui:inputText value="{!v.discountName}" label="{!$Label.c.WDLC_DiscountName}"/>
                            <ui:inputDate value="{!v.discountStartDate}" class="field" displayDatePicker="true"
                                          label="{!$Label.c.WDLC_StartDate}"/>
                            <ui:inputDate value="{!v.discountEndDate}" class="field" displayDatePicker="true"
                                          label="{!$Label.c.WDLC_EndDate}"/>
                        </div>
                    </div>
                </lightning:card>
                <footer class="slds-modal__footer">
                    <lightning:button label="{!$Label.c.No}"
                                      class="slds-button slds-button_brand"
                                      onclick="{!c.hideModal}"/>
                    <lightning:button onclick="{!c.createNewDisc}" variant="brand">
                            {!$Label.c.WDLC_CreateNewDiscount}
                    </lightning:button>
                </footer>
            </div>
        </section>
        <div id="backdropAdding" class="slds-backdrop slds-backdrop--open"></div>
    </aura:if>

    <c:WDL_ShowErrorComponent aura:id="errorChildComponent">
    </c:WDL_ShowErrorComponent>
    <c:WDLC_ErrorToast aura:id="errorToastComponent"/>
</aura:component>