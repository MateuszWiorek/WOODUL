<aura:component description="WDL_FurnitureComplaintComment" implements="forceCommunity:availableForAllPageTypes">
    <aura:attribute name="comment" type="Object" access="global"/>
    <aura:attribute name="userId" type="String" access="global"/>

    <aura:handler name="init" value="{!this}" action="{!c.onInit}"/>
    <div class="wrapper slds-grid" style="margin: 10px;">
        <aura:if isTrue="{!v.comment.CreatedById == v.userId}">
            <div class="slds-col slds-size--5-of-12" style="padding:5px;">
                <lightning:recordViewForm objectApiName="User" recordId="{!v.comment.CreatedById}">
                    <lightning:outputField fieldName="FirstName"/>
                </lightning:recordViewForm>
                <div class="message" style="padding: 5px;">
                    {!v.comment.CommentBody}
                </div>
            </div>
        </aura:if>
        <div class="slds-col slds-size--7-of-12"/>
        <aura:if isTrue="{!not(v.comment.CreatedById == v.userId)}">
            <div class="slds-col slds-col slds-size--5-of-12"
                 style="padding:5px; display:flex; justify-content: flex-end; flex-direction: column;">
                <div style="">
                    <p>Shop assistant</p>
                </div>
                <div class="response" style="padding:10px; text-align:right;">
                        {!v.comment.CommentBody}
                </div>
            </div>
        </aura:if>
    </div>
</aura:component>