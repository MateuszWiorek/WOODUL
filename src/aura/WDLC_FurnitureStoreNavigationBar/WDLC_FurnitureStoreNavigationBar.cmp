<aura:component description="WDLC_FurnitureStoreNavigationBar"
                implements="forceCommunity:availableForAllPageTypes"
                extends="forceCommunity:navigationMenuBase">
        <ul>
            <aura:iteration items="{!v.menuItems}" var="item">
                <aura:if isTrue="{!item.subMenu}">
                    <li>{!item.label}</li>
                    <ul>
                        <aura:iteration items="{!item.subMenu}" var="subItem">
                            <li><a data-menu-item-id="{!subItem.id}" href="">{!subItem.label}</a></li>
                        </aura:iteration>
                    </ul>
                    <aura:set attribute="else">
                        <li><a data-menu-item-id="{!item.id}" href="">{!item.label}</a></li>
                    </aura:set>
                </aura:if>
            </aura:iteration>
        </ul>
    </aura:component>