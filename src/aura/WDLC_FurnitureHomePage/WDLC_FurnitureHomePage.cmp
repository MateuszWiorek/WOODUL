<aura:component description="WDLC_FurnitureHomePage" implements="forceCommunity:availableForAllPageTypes">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <ltng:require
            styles="{!join(',', $Resource.Slick + '/slick/slick.css', $Resource.Slick + '/slick/slick-theme.css')}"
            scripts="{!join(',', $Resource.Slick + '/slick/jquery-3.3.1.js', $Resource.Slick + '/slick/slick.js')}"
            afterScriptsLoaded="{!c.makeCarousel}"
    />
    <div class="mainDiv">
        <div class="carousel" aura:id="divElement">
            <div class="table" style="{!'background-image:url(' + $Resource.WDLC_Table +')'}">
                <span>Do you need cozy design?</span>
                <div>
                    <lightning:button onclick="{!c.goToSearch}" class="goCozyButton">Go shopping
                    </lightning:button>
                </div>
            </div>
            <div class="apartment" style="{!'background-image:url(' + $Resource.WDLC_Apartment +')'}">
                <div>
                    <lightning:button onclick="{!c.goToSearch}" class="goRawButton">Go shopping
                    </lightning:button>
                </div>
                <span>or maybe you prefer</span>
                <span>raw style?</span>
            </div>
        </div>
    </div>
</aura:component>
