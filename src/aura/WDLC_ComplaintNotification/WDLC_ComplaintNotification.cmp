<aura:component description="WDLC_ComplaintNotification"
                controller="PlatformEventServiceController" implements="forceCommunity:availableForAllPageTypes">
    <aura:attribute name="channel" type="String" default="WDLC_NewCaseComment__e"/>
    <aura:attribute name="userId" type="String" access="global"/>

    <aura:registerEvent name="WDLC_ResfreshCaseCommentsEvent" type="c:WDLC_ResfreshCaseCommentsEvent"/>

    <aura:handler name="init" value="{!this}" action="{!c.onInit}"/>
    <aura:handler event="c:IncomingPlatformEvent" action="{!c.notifyUser}"/>

    <c:PlatformEventService aura:id="peService"/>
    <c:WDL_ShowErrorComponent aura:id="informationToast"/>
</aura:component>
