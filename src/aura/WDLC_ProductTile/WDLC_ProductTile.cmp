<aura:component description="WDLC_ProductTile" implements="flexipage:availableForAllPageTypes,forceCommunity:availableForAllPageTypes" extensible="true">
    <aura:attribute name="product" type="Object" access="global" default="null"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <lightning:card>
        <div class="movieImage" style=" margin-left: 7px; width:15rem; height:auto; border: 1px solid black">
            <div style="height:auto;">
                <figure style="position: relative;">
                    <img src="{!v.product.productPhotoUrl}" alt="{!v.product.productName}"/>
                    <span class="fullName">{!v.product.productName}</span>
                </figure>
            </div>
        </div>
    </lightning:card>
</aura:component>