<aura:component description="WDLC_ProductTile" implements="flexipage:availableForAllPageTypes,
 forceCommunity:availableForAllPageTypes" extensible="true">
    <aura:attribute name="product" type="Object" access="global" default="null"/>
    <aura:attribute name="productName" type="String" access="global" default="ikea"/>
    <aura:attribute name="productPhoto" type="String" access="global"
                    default="https://www.ikea.com/us/en/images/products/stefan-chair-brown-black__0727320_PE735593_S5.JPG?f=s"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <lightning:card>
        <div class="movieImage" style=" margin-left: 7px; width:15rem; height:auto; border: 1px solid black">
            <div style="height:auto;">
                <figure style="position: relative;">
                    <img src="{!v.productPhoto}" alt="{!v.productName}"/>
                    <span class="fullName">{!v.productName}</span>
                </figure>
            </div>
        </div>
    </lightning:card>
</aura:component>
