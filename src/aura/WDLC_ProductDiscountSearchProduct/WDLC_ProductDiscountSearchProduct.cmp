<aura:component description="WDLC_ProductDiscountSearchProduct">
    <aura:attribute name="itemToSearch" type="String" access="global"/>

    <aura:registerEvent type="c:WDLC_SendValuesToSearchDiscount" name="sendSearchItem"/>

    <div class="slds-grid">
        <div class="slds-col slds-size--10-of-12">
            <ui:inputText value="{!v.itemToSearch}" placeholder="{!$Label.c.WDLC_SearchItemForDiscount}"/>
        </div>
        <div class="slds-col slds-size--2-of-12">
            <lightning:button onclick="{!c.searchProducts}">Search</lightning:button>
        </div>
    </div>
</aura:component>
